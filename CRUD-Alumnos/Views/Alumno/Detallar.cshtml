@model CRUD_Alumnos.Models.Alumno

@{
    ViewBag.Title = "Detallar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detallar</h2>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Nombre Completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt>
            Edad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            Sexo
        </dt>

        <dd>
            @{
                if (Model.Sexo == "M")
                {
                    <span>Masculino</span>
                }
                else
                {
                    <span>Femenino</span>
                }
            }
        </dd>

        <dt>
            Fecha de Registro
        </dt>

        <dd>
            @Model.FechaRegistro.ToShortDateString()
        </dd>
        <dt>
            Ciudad
        </dt>

        <dd>
            @CRUD_Alumnos.Controllers.AlumnoController.NombreCiudad(Model.CodCiudad)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.id }) |
    @Html.ActionLink("Regresar", "Index")
</p>
